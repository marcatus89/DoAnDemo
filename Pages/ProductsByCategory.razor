@page "/category/{CategoryId:int}"
@page "/category/{CategoryId:int}/page/{PageNumber:int}"

@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

@if (category == null)
{
    <h3>Đang tải danh mục...</h3>
}
else
{
    <h3>Sản phẩm thuộc danh mục: @category.Name</h3>
}


@if (productList == null)
{
    <p><em>Đang tải sản phẩm...</em></p>
}
else if (!productList.Any())
{
    <p>Không có sản phẩm nào trong danh mục này.</p>
}
else
{
    <div class="row">
        @foreach (var product in productList)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <a href="/san-pham/@product.Id">
                        <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://placehold.co/600x400/EEE/31343C?text=No+Image" : product.ImageUrl)" class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 250px;">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a href="/san-pham/@product.Id">@product.Name</a>
                        </h5>
                        <p class="card-text fw-bold mt-auto">@product.Price.ToString("n0") VNĐ</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination UI -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="/category/@CategoryId/page/@(currentPage - 1)">Trước</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="/category/@CategoryId/page/@i">@i</a>
                </li>
            }
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="/category/@CategoryId/page/@(currentPage + 1)">Sau</a>
            </li>
        </ul>
    </nav>
}

@code {
    [Parameter]
    public int CategoryId { get; set; }
    [Parameter]
    public int PageNumber { get; set; }

    private List<Product>? productList;
    private Category? category;
    
    private int currentPage = 1;
    private int totalPages;
    private int pageSize = 6;

    protected override async Task OnParametersSetAsync()
    {
        currentPage = PageNumber == 0 ? 1 : PageNumber;
        
        category = await DbContext.Categories.FindAsync(CategoryId);
        
        if (category != null)
        {
            var query = DbContext.Products.Where(p => p.CategoryId == CategoryId);

            var totalProducts = await query.CountAsync();
            totalPages = Math.Max(1, (int)Math.Ceiling(totalProducts / (double)pageSize));

            productList = await query
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToListAsync();
        }
    }
}
