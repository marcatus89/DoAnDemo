@page "/san-pham"
@page "/san-pham/page/{PageNumber:int}"
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

<h3>Tất cả Sản phẩm</h3>

@if (productList == null)
{
    <p><em>Đang tải sản phẩm...</em></p>
}
else
{
    <div class="row">
        @foreach (var product in productList)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <a href="/san-pham/@product.Id">
                        <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://placehold.co/600x400/EEE/31343C?text=No+Image" : product.ImageUrl)" class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 250px;">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a href="/san-pham/@product.Id">@product.Name</a>
                        </h5>
                        <p class="card-text fw-bold mt-auto">@product.Price.ToString("n0") VNĐ</p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                         <a href="/san-pham/@product.Id" class="btn btn-outline-primary w-100">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Bắt đầu phần Giao diện Phân trang -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="/san-pham/page/@(currentPage - 1)">Trước</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="/san-pham/page/@i">@i</a>
                </li>
            }
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="/san-pham/page/@(currentPage + 1)">Sau</a>
            </li>
        </ul>
    </nav>
    <!-- Kết thúc phần Giao diện Phân trang -->
}

@code {
    [Parameter]
    public int PageNumber { get; set; }

    private List<Product>? productList;
    private int currentPage = 1;
    private int totalPages;
    private int pageSize = 6; // Hiển thị 6 sản phẩm mỗi trang

    protected override async Task OnParametersSetAsync()
    {
        currentPage = PageNumber == 0 ? 1 : PageNumber;

        var totalProducts = await DbContext.Products.CountAsync();
        totalPages = (int)Math.Ceiling(totalProducts / (double)pageSize);

        productList = await DbContext.Products
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToListAsync();
    }
}

